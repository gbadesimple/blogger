<h1> All Articles </h1>

<ul id="articles">
    <% @articles.each do |article| %>
    <li> 
        <%= link_to article.title, article_path(article), class: 'article_title', id: "article_#{article.id}" %>
    </li>
    <% end %>
</ul>


<h1> Create New Article </h1>

<ul id="new_articles">
    <% @articles.each do |article| %>
    <li>
        <%= link_to "New Article", new_article_path, class: "new_article", id: "article_#{article.id}" %>
    </li>
    <% end %>
</ul>
